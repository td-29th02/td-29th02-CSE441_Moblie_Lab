<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header với tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6B5B95"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bai10_intent_filter_main"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Container cho input và button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Label "Nhập Link Website" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Link Website"
            android:textColor="#8BC34A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- EditText cho nhập link -->
        <EditText
            android:id="@+id/editTextWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập URL website..."
            android:inputType="textUri"
            android:padding="12dp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="16dp" />

        <!-- Button "SHOW WEB PAGE" -->
        <Button
            android:id="@+id/buttonShowWebPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHOW WEB PAGE"
            android:textColor="#000000"
            android:background="#E0E0E0"
            android:textStyle="bold"
            android:padding="16dp"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>